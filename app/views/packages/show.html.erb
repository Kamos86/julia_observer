<div class="col-sm-8 cs-main-area">

  <div class="panel panel-default">

    <div class="panel-body">

      <h1>
        <%= @package.name %>
      </h1>

      <h4>
        <%= @package.description %>
      </h4>

    </div>

  </div>

  <%= render "dater" %>

  <%= render "counter" %>

</div>

<div class="cs-sidebar col-sm-4 hidden-xs cs-no-padding">

  <div class="panel panel-primary">

    <div class="panel-heading cs-center">
      <h4 class="cs-no-margin">Pkg.add("<%= @package.name %>")</h4>
    </div>

    <div class="panel-body cs-no-padding">

    </div>

    <div class="panel-footer cs-center cs-no-padding">
      <a href="https://github.com/djsegal/julia_observer" target="_blank" class="btn btn-default cs-github-link cs-full-width cs-no-margin">
        <%= fa_icon "github lg" %>
        &nbsp; fork us on github
      </a>
    </div>

  </div>

</div>
