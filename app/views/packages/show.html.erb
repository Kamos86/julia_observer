<div class="col-sm-8 cs-main-area">

  <div class="panel panel-default">

    <div class="panel-body">

      <h1>
        <a href="<%= @package.url %>" target="_blank">
          <%= @package.name %>
        </a>
      </h1>

      <h4>
        <%= @package.description %>
      </h4>

    </div>

  </div>

  <%= render "dater" %>

  <%= render "counter" %>

</div>

<div class="cs-sidebar col-sm-4 hidden-xs cs-no-padding">

  <div class="panel panel-primary">

    <div class="panel-heading cs-center">
      <h4 class="cs-no-margin">Pkg.add("<%= @package.name %>")</h4>
    </div>

    <div class="panel-body cs-no-padding">

      <div class="list-group">

          <div class="list-group-item cs-no-padding">

            <div class="row-content cs-full-width cs-category-row">

              <a href="<%= @package.homepage || @package.url %>" target="_blank" class="btn btn-default cs-full-width cs-left-align cs-no-margin">

                <h4>
                  homepage
                </h4>

                <br>

                <%
                  homepage_link_text = @package.homepage.present? ? \
                    @package.homepage : "no homepage"
                %>

                <span class="cs-pull-right">
                  <%= homepage_link_text %>
                </span>

              </a>

            </div>

          </div>

          <div class="list-group-separator cs-full-width cs-no-margin"></div>

          <div class="list-group-item cs-no-padding">

            <div class="row-content cs-full-width cs-category-row">

              <%= link_to users_path, class: "btn btn-default cs-full-width cs-left-align cs-no-margin" do %>
                <h3 class="cs-center">
                  contributors
                </h3>
              <% end %>


              </a>

            </div>

          </div>

          <% @package.contributors.each_slice(4) do | batch | %>

            <div class="list-group-separator cs-full-width cs-no-margin"></div>

            <div class="list-group-item cs-no-padding">

              <div class="row cs-contributors-list cs-no-margin">

                <% batch.each do | contributor | %>

                  <div class="col-xs-3 cs-category-row cs-no-padding">

                    <%= link_to '', user_path(contributor), class: "btn btn-default cs-full-width cs-left-align cs-no-margin cs-grey-image", style: "background-image: url('#{ contributor.avatar}');" %>

                    </a>

                  </div>

                <% end %>

            </div>

          <% end %>

      </div>

    </div>

    <div class="panel-footer cs-center cs-no-padding">
      <a href="https://github.com/djsegal/julia_observer" target="_blank" class="btn btn-default cs-github-link cs-full-width cs-no-margin">
        <%= fa_icon "github lg" %>
        &nbsp; fork us on github
      </a>
    </div>

  </div>

</div>
