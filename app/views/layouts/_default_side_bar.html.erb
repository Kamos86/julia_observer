<div class="cs-side-bar col-sm-4 hidden-xs cs-no-padding">

  <div class="panel panel-primary">

    <% cookies.permanent[:sidebar_select] ||= 'categories' %>

    <div class="panel-heading cs-center row cs-no-padding cs-no-margin">
      <a class="col-xs-6 cs-no-margin cs-sidebar-toggle js-sidebar-toggle btn <%= "btn-default cs-inactive-toggle" unless cookies[:sidebar_select] == 'categories' %>" id="js-categories-toggle">
        <h4 class="cs-no-margin">
          Categories
        </h4>
      </a>

      <a class="col-xs-6 cs-no-margin cs-sidebar-toggle js-sidebar-toggle btn <%= "btn-default cs-inactive-toggle" unless cookies[:sidebar_select] == 'news' %>" id="js-news-toggle">
        <h4 class="cs-no-margin">
          News
        </h4>
      </a>
    </div>

    <div class="panel-body cs-no-padding">

      <div class="list-group js-sidebar-body <%= "hidden" unless cookies[:sidebar_select] == 'categories' %>" id="js-categories-sidebar">

        <%= render 'layouts/categories_side_bar' %>

      </div>

      <div class="list-group js-sidebar-body <%= "hidden" unless cookies[:sidebar_select] == 'news' %>" id="js-news-sidebar">

        <%= render 'layouts/news_side_bar' %>

      </div>

    </div>

    <div class="panel-footer cs-center cs-no-padding">
      <a href="https://github.com/djsegal/julia_observer" target="_blank" class="btn btn-default cs-side-bar-footer-link cs-full-width cs-no-margin">
        <%= fa_icon "github lg" %>
        &nbsp; fork us on github
      </a>
    </div>

  </div>

</div>
