$(document).on( 'click', '.ui-autocomplete .ui-menu-item', function(event) {
  var dummyLink = $('.js-dummy-link')[0];

  var queryId = event.target.textContent,
      queryType = 'packages';

  var replaceId = "dummy_id",
      replaceType = "dummies";

  var oldUrl = dummyLink.href,
      newUrl = oldUrl.replace(replaceId, queryId).replace(replaceType, queryType);

  dummyLink.href = newUrl;
  dummyLink.click();
});

document.addEventListener("turbolinks:load", function(event) {
  if (typeof ga === "function") {
    ga("set", "location", event.data.url);
    ga("send", "pageview");
  }
});
